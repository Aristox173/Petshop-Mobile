<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetshopMobileProgreso2.Pages.LoginPage"
             Title="LoginPage"
             BackgroundColor="SkyBlue">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Margin="20">
        <Label Text="BIENVENIDO" FontSize="30" TextColor="White" HorizontalOptions="Center" Margin="0,0,0,20" />
        <Label Text="Inicio de sesión" FontSize="20" HorizontalOptions="Center" Margin="0,0,0,20" />
        <Entry x:Name="txtUsername" Placeholder="Nombre de usuario" />
        <Entry x:Name="txtPassword" Placeholder="Contraseña" IsPassword="True" />
        <Button Text="Iniciar sesión" Clicked="OnLoginClicked" Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>